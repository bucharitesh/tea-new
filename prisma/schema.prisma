datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ApprovalStatus {
  INITIALISED
  PENDING
  VERIFIED
  REJECTED
}

model Buyer {
  id                      String         @id @default(auto()) @map("_id") @db.ObjectId
  user_id                 String         @unique
  password                String?
  email                   String         
  businessName            String
  address                 String
  pincode                 String
  district                String
  state                   String
  name                    String
  contactNo               String
  alternateContactNo      String
  panNo                   String
  gstNo                   String
  fssaiNo                 String
  tmcoNo                  String
  bankAccountNo           String
  ifscCode                String
  nameOfTransport         String
  verification_status     ApprovalStatus @default(INITIALISED)
  createdAt               DateTime       @default(now())
  updatedAt               DateTime       @updatedAt
}

model Seller {
  id                      String         @id @default(auto()) @map("_id") @db.ObjectId
  user_id                 String         @unique
  password                String?
  email                   String  
  businessName            String
  address                 String
  pincode                 String
  district                String
  state                   String
  name                    String
  contactNo               String
  alternateContactNo      String
  panNo                   String
  gstNo                   String
  fssaiNo                 String
  tmcoNo                  String
  bankAccountNo           String
  ifscCode                String
  nameOfTransport         String
  verification_status     ApprovalStatus @default(INITIALISED)
  createdAt               DateTime       @default(now())
  updatedAt               DateTime       @updatedAt
}

model Admin {
  id                      String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id                 String   @unique
  password                String  
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

model Product {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  sellerId            String   
  invoiceNo           Int
  grade               ProductGrade
  pkgs                Int
  kgPerBag            Float
  sampleUsed          Float
  price               Float
  division            Boolean
  verification_status String   @default("PENDING")
  score               ProductScore?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

type ProductScore {
  appearance  Float
  taste       Float
  liquor      Float
  infusion    Float
  grading     Float
}

enum ProductGrade {
  A
  B
  C
}

enum ProductVerificationStatus {
  VERIFIED
  PENDING
  REJECTED
}